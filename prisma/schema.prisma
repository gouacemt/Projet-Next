datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}*//

model User {
  id               String   @id @default(cuid())
  email            String   @unique
  stripeCustomerId String?  @unique // ID du client chez Stripe
  stripeSubscriptionId String? @unique // ID de l'abonnement
  subscriptionStatus   String? // active, trialing, canceled, past_due
}